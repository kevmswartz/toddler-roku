{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Roku Control",
  "version": "1.0.0",
  "identifier": "com.eli.rokucontrol",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "capabilities": ["default"]
    },
    "windows": [
      {
        "label": "main",
        "title": "Roku Control",
        "width": 1024,
        "height": 768,
        "resizable": true
      }
    ]
  },
  "plugins": {}
}
