{
  "name": "roku-control",
  "version": "1.0.0",
  "description": "Web-based Roku remote control with app launching",
  "keywords": [
    "roku",
    "remote",
    "control"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mnlphlp/plugin-blec": "^0.8.0",
    "@netlify/blobs": "^10.3.3",
    "@tauri-apps/api": "^2.8.0",
    "canvas-confetti": "^1.9.3"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "npm run build -- --watch",
    "sync:netlify": "node -e \"require('fs').copyFileSync('public/editor.html', 'netlify/public/editor.html')\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "tauri": "tauri",
    "tauri:dev": "npm run build && npx tauri dev",
    "tauri:build": "npm run build && npx tauri build",
    "android:build": "npm run build && npx tauri android build"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.0",
    "@vitest/ui": "^4.0.8",
    "esbuild": "^0.27.0",
    "jsdom": "^27.2.0",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.4.5",
    "vitest": "^4.0.8"
  }
}
